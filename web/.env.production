# FPL Rules Checker - Production Configuration
# Copy this to .env.local and customize for your deployment

# Server Configuration
NODE_ENV=production
PORT=3001

# Rate Limiting Configuration (per minute)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
API_RATE_LIMIT_MAX=500
SLOW_DOWN_DELAY_AFTER=100
SLOW_DOWN_DELAY_MS=50
SLOW_DOWN_MAX_DELAY_MS=1000

# Security Configuration - UPDATE WITH YOUR DOMAIN
CORS_ORIGINS=http://localhost:3001,https://yourdomain.com,https://www.yourdomain.com

# Request Configuration  
REQUEST_TIMEOUT=10000
REQUEST_SIZE_LIMIT=10mb
PARAMETER_LIMIT=100

# Logging Configuration
ENABLE_REQUEST_LOGGING=false
ENABLE_ERROR_LOGGING=true

# FPL API Configuration
FPL_API_BASE_URL=https://fantasy.premierleague.com
FPL_REQUEST_DELAY=50
FPL_BATCH_SIZE=5
FPL_MAX_RETRIES=3