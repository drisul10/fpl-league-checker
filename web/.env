# FPL Rules Checker Configuration
# This is an example file. Copy to .env.local for local development
# or modify directly for production deployment

# Server Configuration
NODE_ENV=development
PORT=3001

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=500
API_RATE_LIMIT_MAX=100
SLOW_DOWN_DELAY_AFTER=50
SLOW_DOWN_DELAY_MS=100
SLOW_DOWN_MAX_DELAY_MS=2000

# Security Configuration
CORS_ORIGINS=http://localhost:3001,http://127.0.0.1:3001,http://localhost:3000,http://127.0.0.1:3000,https://yourdomain.com

# Request Configuration  
REQUEST_TIMEOUT=10000
REQUEST_SIZE_LIMIT=10mb
PARAMETER_LIMIT=100

# Logging Configuration
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true

# FPL API Configuration
FPL_API_BASE_URL=https://fantasy.premierleague.com
FPL_REQUEST_DELAY=50
FPL_BATCH_SIZE=5
FPL_MAX_RETRIES=3